<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    
    
    <!-- ESTADO CLIKEABLE -->
   	<item android:state_pressed="true">
        <shape >
    		<corners 
    		    android:radius="30dp"/> 
    		
    		<gradient 
    		    android:startColor="@color/negro"
    		    android:endColor="@color/Rojo1"
    		    android:angle="270"/>
    		
    		<stroke 
    		    android:width="2dp"
    		    android:color="@color/negro"/>
    		
    		<padding
                android:top    = "10dp"
                android:right  = "10dp"
                android:bottom = "10dp"
                android:left   = "10dp"/> 
        </shape>     
    </item>
    
    
    
    
 	<!-- ESTADO NORMAL --> 
   	<item>
        <shape >
    		<corners 
    		    android:radius="30dp"/> 
    		
    		<gradient 
    		    android:startColor="@color/negro"
    		    android:centerColor="@color/Rojo1"
    		    android:endColor="@color/Rojo2"
    		    android:angle="270"/>
    		
    		<stroke 
    		    android:width="2dp"
    		    android:color="@color/negro"/>
    		
    		<padding
                android:top    = "10dp"
                android:right  = "10dp"
                android:bottom = "10dp"
                android:left   = "10dp"/> 
        </shape>     
    </item>

</selector>